    <StackPanel.LayoutTransform>
      <ScaleTransform ScaleX="4.5" ScaleY="4.5" />
    </StackPanel.LayoutTransform>
    <TextBlock Text="TextFormattingMode=Display" TextOptions.TextFormattingMode="Display" ></TextBlock>
    <TextBlock Text="TextFormattingMode=Ideal" TextOptions.TextFormattingMode="Ideal"  ></TextBlock>
  </StackPanel>
</Window>
